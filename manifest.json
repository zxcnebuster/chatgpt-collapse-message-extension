{
  "manifest_version": 3,
  "name": "ChatGPT Article Highlighter",
  "version": "1.0",
  "description": "Highlights article elements with a red background if they contain a specific child element.",
  "permissions": ["activeTab"],
  "content_scripts": [
    {
      "matches": ["https://chatgpt.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
